<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transp</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/transp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="scrollUpdate">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="AddDevice" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/transp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#FF000000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF000000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#30000000
        </item>
    </style>

</resources>