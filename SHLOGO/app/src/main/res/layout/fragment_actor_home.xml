<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ActorHome">

    <ImageView
        android:id="@+id/imageSensorHome"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/lamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="NAME"
        android:textSize="42sp"
        app:layout_constraintBottom_toTopOf="@+id/imageSensorHome"
        app:layout_constraintEnd_toEndOf="@+id/imageSensorHome"
        app:layout_constraintStart_toStartOf="@+id/imageSensorHome" />

    <TextView
        android:id="@+id/roomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOM"
        app:layout_constraintEnd_toEndOf="@+id/nameText"
        app:layout_constraintStart_toStartOf="@+id/nameText"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <TextView
        android:id="@+id/valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="VALUE"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/imageSensorHome"
        app:layout_constraintStart_toStartOf="@+id/imageSensorHome"
        app:layout_constraintTop_toBottomOf="@+id/imageSensorHome" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/changeValueContainer"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/valueText"
        app:layout_constraintStart_toStartOf="@+id/valueText"
        app:layout_constraintTop_toBottomOf="@+id/valueText">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>