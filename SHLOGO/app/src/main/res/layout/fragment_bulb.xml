<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bulb_const_lay"
        android:layout_width="110dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/lamp_png"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:contentDescription="@string/lamp_png_descr"
            android:src="@drawable/lamp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lamp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/light_bulb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lamp_png" />

        <Switch
            android:id="@+id/lamp_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/Switch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lamp_txt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>